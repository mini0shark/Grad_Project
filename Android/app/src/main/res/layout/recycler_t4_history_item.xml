<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp">
        <FrameLayout
            android:id="@+id/frameLayout_recyclerHistoryItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_shadow_home">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imageView_recyclerHistoryItem_recipeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/layout_1"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/layout_2"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView_recyclerHistoryItem_representUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/search_recycler_item1_color"
                            android:shadowColor="@color/not_like_or_add_list_color"
                            android:shadowRadius="2.0"
                            android:shadowDx="7.0"
                            android:shadowDy="7.0"
                            android:adjustViewBounds="true"
                            android:layout_marginEnd="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_recyclerHistoryItem_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/search_recycler_item1_color"
                        android:shadowColor="@color/not_like_or_add_list_color"
                        android:shadowRadius="2.0"
                        android:shadowDx="7.0"
                        android:shadowDy="7.0"
                        android:adjustViewBounds="true"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_2"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/layout_1"
                    app:layout_constraintBottom_toTopOf="@+id/textView_dateTime"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/textView_recyclerHistory_content"
                        android:text="-"
                        android:textSize="20sp"
                        android:textColor="@color/search_recycler_item1_color"
                        android:shadowColor="@color/not_like_or_add_list_color"
                        android:shadowRadius="2.0"
                        android:shadowDx="7.0"
                        android:shadowDy="7.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/textView_dateTime"
                    android:text="~~ì „"
                    android:textColor="@color/search_recycler_item1_color"
                    android:shadowColor="@color/not_like_or_add_list_color"
                    android:shadowRadius="2.0"
                    android:shadowDx="7.0"
                    android:shadowDy="7.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>