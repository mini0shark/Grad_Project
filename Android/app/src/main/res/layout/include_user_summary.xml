<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView_summary_userImage"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/textView_summary_userName"
            android:hint="UnKnown"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
            android:textColor="@color/search_recycler_item1_color"
            android:shadowColor="@color/not_like_or_add_list_color"
            android:shadowRadius="2.0"
            android:shadowDx="7.0"
            android:shadowDy="7.0"
            android:ellipsize="end"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>