<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/layout_recyclerSearchReferenceItem">
    <ImageView
        android:id="@+id/imageView_searchReferenceImage"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:id="@+id/layout_referenceItem"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="title : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/textView_searchReferenceRecyclerItem_title"
                android:hint="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Food : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/textView_searchReferenceRecyclerItem_foodName"
                android:hint="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:text="-"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textView_recyclerSearchReferenceItem_writer"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"/>
            <ImageView
                android:src="@drawable/ic_thumb_up_gray_24dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/textView_recyclerSearchReferenceItem_likeCount"
                android:hint="-"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>