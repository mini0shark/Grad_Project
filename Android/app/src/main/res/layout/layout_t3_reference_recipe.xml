<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_referenceRecipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/button_findReference"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_shadow_underline">
                <TextView
                    android:id="@+id/textView_referenceRecipe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:hint="참조한 레시피를 찾으세요"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_search_black_24dp"
                    android:backgroundTint="@android:color/transparent"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/button_removeReference"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                app:srcCompat="@drawable/ic_remove_circle_outline_red_24dp"
                android:backgroundTint="@android:color/transparent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>