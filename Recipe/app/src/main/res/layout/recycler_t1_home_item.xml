<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_homeItem">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_shadow_home">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_homeItem_type"
                    android:hint="TITLE"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:id="@+id/linearLayout_recyclerHome_onlyRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint=" : "
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/textView_homeItem_title"
                        android:hint="Title"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager_homeItem"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:id="@+id/layout_homeItem_user"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_homeItem_userImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/textView_homeItem_userName"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textView_homeItemContent"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:id="@+id/button_homeItem_goToRecipe"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/go_detail"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:backgroundTint="@android:color/transparent"
                android:layout_gravity="right"
                />


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/button_homeItem_like"
                        app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                        android:scaleType="fitXY"
                        android:backgroundTint="@android:color/transparent"
                        android:tag="false"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/textView_homeItem_likeAmount"
                        android:text="0"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/button_homeItem_comment"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_comment_black_24dp"
                        android:tag="false"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/textView_homeItem_commentAmount"
                        android:text="0"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/button_homeItem_addToMyList"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_playlist_add_black_24dp"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/textView_homeItem_hitCountText"
                    android:text="조회 수 : "
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_homeItem_hitCount"
                    android:text="size"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_homeItem_comment"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>