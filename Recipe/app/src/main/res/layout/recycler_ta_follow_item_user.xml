<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_recyclerSearchItemUser">
    <ImageView
        android:id="@+id/imageView_followItem_profile"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:id="@+id/layout_followItem"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_followItem_nickname"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    android:shadowColor="@color/not_like_or_add_list_color"
                    android:shadowDx="7.0"
                    android:shadowDy="7.0"
                    android:shadowRadius="2.0"
                    android:text="-"
                    android:textColor="@color/search_recycler_item2_3_color"
                    android:textSize="26sp"
                    android:layout_gravity="center"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/textView_followItem_followTime"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#777777"
                    android:shadowColor="@color/not_like_or_add_list_color"
                    android:shadowRadius="5.0"
                    android:shadowDx="5.0"
                    android:shadowDy="5.0"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>