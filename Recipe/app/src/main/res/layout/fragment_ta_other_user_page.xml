<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TAOtherUserPage">


    <ScrollView
        android:id="@+id/scrollView_fragmentOtherUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/imageView_fragmentOtherUsers_profileImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    tools:layout_editor_absoluteY="12dp"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/textView_fragmentOtherUsers_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView_fragmentOtherUsers_profileImage"
                    app:layout_constraintLeft_toRightOf="@id/imageView_fragmentOtherUsers_profileImage" />
                <LinearLayout
                    android:id="@+id/button_otherUserPage_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <TextView
                        android:id="@+id/textView_otherUserPage_follow"
                        android:text="팔로우 하기"
                        android:textSize="18sp"
                        android:layout_margin="0dp"
                        android:shadowColor="@color/not_like_or_add_list_color"
                        android:shadowDx="7.0"
                        android:shadowDy="7.0"
                        android:shadowRadius="2.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/textView_fragmentOtherUsers_introduce"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="introduce of user"
                    android:textSize="18sp"
                    android:gravity="top"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_fragmentOtherUsers_profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/textView_fragmentOtherUsers_introduce"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout_fragmentOtherUsers_recipe"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:text="Recipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textView_fragmentOtherUsers_recipeCount"
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_fragmentOtherUsers_story"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:text="Story"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textView_fragmentOtherUsers_storyCount"
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_fragmentOtherUsers_follower"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:text="Follower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textView_fragmentOtherUsers_followings"
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_fragmentOtherUsers_following"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:text="Following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textView_fragmentOtherUsers_followers"
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout_fragmentOtherUsers"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="5"/>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager_fragmentOtherUsers"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_weight="30"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>