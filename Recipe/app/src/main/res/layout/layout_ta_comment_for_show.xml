<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView_comment_userImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textView_comment_userName"
            android:hint="유저 이름"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/button_comment_delete"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="삭제"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_comment_content"
            android:text="댓글 내용"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/button_comment_like"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:scaleType="fitXY"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/textView_comment_likeAmount"
                android:text="0"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"/>
    </LinearLayout>

</LinearLayout>